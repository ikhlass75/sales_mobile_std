<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HHT.Pages.HygienePage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">

    <!-- Grid pour permettre au ScrollView de défiler -->
    <Grid RowDefinitions="Auto,*">

        <!-- Barre supérieure avec flèche et titre -->
        <Grid Padding="5" ColumnDefinitions="Auto,*" Grid.Row="0">
            <!-- Flèche retour -->
            <Label Text="←"
                   FontSize="28"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BackButton_Tapped"/>
                </Label.GestureRecognizers>
            </Label>

            <!-- Titre -->
            <Label Grid.Column="1"
                   Text="Hygiène et entretien"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="Blue"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Margin="10,0,0,0"/>
        </Grid>

        <!-- Liste des produits -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="10">

                <!-- Produit : Dentifrice -->
                <Frame CornerRadius="12" Padding="10" HasShadow="True" BackgroundColor="White">
                    <Grid ColumnDefinitions="80,*">
                        <Image Source="dentifrice.png" HeightRequest="60" WidthRequest="60"/>
