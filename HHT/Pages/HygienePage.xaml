                    </Grid>
                </Frame>

                <!-- Produit : Lingettes nettoyantes -->
                <Frame CornerRadius="12" Padding="10" HasShadow="True" BackgroundColor="White">
                    <Grid ColumnDefinitions="80,*">
                        <Image Source="lingettes.jpg" HeightRequest="60" WidthRequest="60"/>
