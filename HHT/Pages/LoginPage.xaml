<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HHT.Pages.LoginPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
             Title="Connexion">

	<VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
		<Image Source="snifly_logo.png" HeightRequest="100" HorizontalOptions="Center" />
		<Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
		<Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True"/>
        <Button Text="Se connecter" Clicked="OnLoginClicked" BackgroundColor="#1E90FF" TextColor="{AppThemeBinding Light=White, Dark=Black}"/>
	</VerticalStackLayout>
</ContentPage>
