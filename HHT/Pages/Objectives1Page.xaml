<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HHT.Pages.Objectives1Page"
             Title="Objectives1Page">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Titre principal -->
            <Label Text="Mes objectifs"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center" />

            <!-- Phrase descriptive -->
            <Label Text="Voici la liste des objectifs à faire pour aujourd'hui"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- Cadre objectif 1 -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="20">
                <HorizontalStackLayout Spacing="10">
                    <CheckBox VerticalOptions="Center" Color="#18A0FB"
                              CheckedChanged="CheckBox_CheckedChanged"
                              x:Name="chk1" />
                    <Label Text="Appeler 5 clients pour suivi"
                           x:Name="lbl1"
                           VerticalOptions="Center"
                           FontSize="16" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Cadre objectif 2 -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="20">
                <HorizontalStackLayout Spacing="10">
                    <CheckBox VerticalOptions="Center" Color="#18A0FB"
                              CheckedChanged="CheckBox_CheckedChanged"
                              x:Name="chk2" />
                    <Label Text="Préparer le rapport de ventes"
                           x:Name="lbl2"
                           VerticalOptions="Center"
                           FontSize="16" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Cadre objectif 3 -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="20">
                <HorizontalStackLayout Spacing="10">
                    <CheckBox VerticalOptions="Center" Color="#18A0FB"
                              CheckedChanged="CheckBox_CheckedChanged"
                              x:Name="chk3" />
                    <Label Text="Mettre à jour le stock"
                           x:Name="lbl3"
                           VerticalOptions="Center"
                           FontSize="16" />
                </HorizontalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
