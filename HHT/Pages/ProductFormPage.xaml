<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HHT.Pages.ProductFormPage"
             Title="Produit"
             BackgroundColor="White">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Entry x:Name="NameEntry" Placeholder="Nom du produit"/>
            <Entry x:Name="CategoryEntry" Placeholder="Catégorie"/>
            <Entry x:Name="DescriptionEntry" Placeholder="Description"/>
            <Entry x:Name="QuantityEntry" Placeholder="Quantité" Keyboard="Numeric"/>
            <Entry x:Name="SoldEntry" Placeholder="Vendu" Keyboard="Numeric"/>
            <Entry x:Name="PriceEntry" Placeholder="Prix" Keyboard="Numeric"/>
            <Entry x:Name="ImagePathEntry" Placeholder="Chemin de l'image (ex: lait.png)"/>

            <Button Text="💾 Sauvegarder"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
