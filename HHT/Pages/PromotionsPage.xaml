<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HHT.Pages.PromotionsPage"
             Title="Nos Promotions"
             BackgroundColor="White">

    <ContentPage.Content>
        <StackLayout Padding="20,40,20,0">
            <!-- Titre -->
            <Label Text="Nos Promotions"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

            <!-- Barre de recherche et filtre -->
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <SearchBar Placeholder="Chercher"
                           BackgroundColor="#F0F0F0"
                           Margin="0"
                           Grid.Column="0"
                           HeightRequest="40" />

                <ImageButton Source="filter_icon.png"
                             BackgroundColor="#F0F0F0"
                             CornerRadius="20"
                             HeightRequest="40"
                             WidthRequest="40"
                             Grid.Column="1" />
            </Grid>

            <!-- Grille de produits -->
            <CollectionView ItemsSource="{Binding Promotions}"
                            Margin="0,20,0,0">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="3"
                                     VerticalItemSpacing="15"
                                     HorizontalItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#DDD" CornerRadius="10" Padding="10">
                            <StackLayout>
                                <Image Source="{Binding Image}"
                                       HeightRequest="60"
                                       Aspect="AspectFit" />
                                <Label Text="{Binding Name}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1"/>
                                <Label Text="{Binding Price}"
                                       FontSize="12"
                                       TextColor="Gray" />
                                <Image Source="discount_50.png"
                                       HeightRequest="20"
                                       WidthRequest="40" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
